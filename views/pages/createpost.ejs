<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs", {title: "Create Post"})  %> 
<body>
<%- include("../partials/header.ejs")  %> 

<main class="p-5">
  <% if (message) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>Error: <%= message %> </strong>
     

      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

    <form class="bg-primary text-light p-3" method="post">
        <h1 class="text-center">Create Post</h1>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Title" name="title">
          </div>
          <div class="mb-3">
            <label for="post" class="form-label">Body</label>
            <textarea class="form-control" id="post" rows="3" name="body"></textarea>
          </div>
          <button type="submit" class="btn btn-light">Create Post</button>
        

    </form>
</main>

<%- include("../partials/footer.ejs")  %> 

    
</body>
</html>