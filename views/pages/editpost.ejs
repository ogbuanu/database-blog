<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs", {title: post.title})  %> 
<body>
<%- include("../partials/header.ejs",{user: user})  %> 

<main class="p-5">
    <form class="bg-primary text-light p-3" method="post">
        <h1 class="text-center">Edit Post</h1>
        <div class="mb-3">
            <label for="title" class="form-label">Username</label>
            <input type="text" class="form-control" id="title" placeholder="Title" value="<%= post.title %>" name="title">
          </div>
          <div class="mb-3">
            <label for="post" class="form-label">Body</label>
            <textarea class="form-control" id="post" rows="3" name="body"><%= post.body %></textarea>
          </div>
          <button type="submit" class="btn btn-light">Edit Post</button>
        

    </form>
</main>

<%- include("../partials/footer.ejs")  %> 

    
</body>
</html>